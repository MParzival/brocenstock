{% extends 'base.html.twig' %}

{% block title %}Hello MainController!{% endblock %}

{% block stylesheets %}
    <style>
        body{
            margin: 0;
            padding: 0;
            height: 100vh;
            background: url(../ressources/lens-3252078_1920.jpg);
            background-repeat: no-repeat;
            background-size: cover;
            position: relative;
            overflow-x: hidden;
        }

        .container-first{
            position: absolute;
            top: 30%;
            left: 5%;
        }

        h1{
            text-transform: uppercase;
            font-size: 110px;
            color: #ff7300;
        }

        span{
            position: relative;
        }

        .container-btns{
            position: relative;
            top: 50px;
        }

        a.btn {
            color: #ff7300;
            border-radius: 50px;
            text-transform: uppercase;
            background-color: black;
            font-weight: 800;
            text-align: center;
        }

        .btn-first{
            border: 2px solid #ff7300;
            outline: none;
            background: transparent;
            font-size: 30px;
            padding: 20px;
            width: 300px;
            cursor: pointer;
            color: #ff7300;
            border-radius: 50px;
        }

        .btn-first:nth-child(1){
            margin-right: 30px;
        }

        .btn-first:hover{
            transition: all 0.3s ease-in-out;
            background: #ff7300;
            color: black;
        }

        .lignes{
            position: absolute;
            top: 6%;
            left: 5%;
        }

        .l1{
            width: 250px;
            height: 3px;
            background: #ff7300;
            border-radius: 5px;
        }

        .l2{
            width: 140px;
            height: 3px;
            background: #ff7300;
            border-radius: 5px;
            position: relative;
            top: 20px;
        }

        .logo-image-principale{
            position: absolute;
            right: 2.9%;
            top: 4%;
            width: 80px;
            height: 80px;
            cursor: pointer;
        }

        .medias{
            position: absolute;
            right: 3.3%;
            top: 50%;
            transform: translateY(-50%);
            display: flex;
            justify-content: center;
            align-items: center;
            flex-direction: column;
        }

        .bulle{
            width: 80px;
            height: 80px;
            margin-bottom: 15px;
            cursor: pointer;
            position: relative;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="lignes">
        <div class="l1"></div>
        <div class="l2"></div>
    </div>

    <div class="container-first">
        <h1><span>Brock </span><span>& </span><span>Stock</span></h1>
        <div class="container-btns">
            <a href="{{ path('home_page')}}" class="btn btn-first b1">Discover</a>
            <a href="#" class="btn btn-first b2">Contact</a>
        </div>
    </div>

    <img src="" alt="" class="logo-page-principal">

    <ul class="medias">
        <li class="bulle">
            <img src="{{ asset('ressources/facebook-social-badge.svg')}}" alt="logo facebook" class="logo-medias"
                style="height: 80px; width: 80px">
        </li>
        <li class="bulle">
            <img src="{{ asset('ressources/instagram-social-badge.svg')}}" alt="logo instagram" class="logo-medias"
                style="height: 80px; width: 80px">
        </li>
    </ul>

{% endblock %}
