{% extends 'base.html.twig' %}

{% block title %}Product{% endblock %}

{% block body %}
    <h1>Product</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ product.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ product.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ product.description }}</td>
            </tr>
            <tr>
                <th>Product</th>
                <td>{{ product.product }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ product.updatedAt ? product.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Photo</th>
                <td>
                    <img src="{{ asset( 'images/products/'~ product.product )}}">
                </td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('add_product_list') }}">back to list</a>

    <a href="{{ path('add_product_edit', {'id': product.id}) }}">edit</a>

    {{ include('admin/add_product/_delete_form.html.twig') }}
{% endblock %}
